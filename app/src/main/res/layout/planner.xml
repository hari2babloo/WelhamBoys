<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#eddbbb"
    android:gravity="center"
    tools:context="com.a3x3conect.welhamboys.Planner">

    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:mtf_image="@drawable/courssmal">

        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search By Course/Class"
            android:textColor="#0078d7"
            android:textColorHint="#0078d7"
            android:textSize="16dp" />

    </com.github.florent37.materialtextfield.MaterialTextField>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fishPriceList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:layout_marginTop="80dp" />

</RelativeLayout>
